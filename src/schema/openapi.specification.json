{
  "openapi": "3.0.0",
  "info": {
    "title": "Authentication service",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "get": {
        "summary": "Get a list of users",
        "description": "Retrieve a list of user entities.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Resource to create a user",
        "description": "Create a user",
        "requestBody": {
          "description": "User to add to the system",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["email", "firstName", "lastName"],
        "properties": {
          "email": {
            "type": "string",
            "default": "johndoe@gmail.com"
          },
          "password": {
            "type": "string",
            "default": "securePassword123"
          },
          "firstName": {
            "type": "string",
            "default": "john"
          },
          "lastName": {
            "type": "string",
            "default": "Doe"
          },
          "tcAgreed": {
            "type": "boolean"
          },
          "firstSignOn": {
            "type": "boolean",
            "default": false
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "UserInput": {
        "type": "object",
        "required": ["email", "firstName", "lastName", "password", "tcAgreed"],
        "properties": {
          "email": {
            "type": "string",
            "default": "johndoe@gmail.com"
          },
          "password": {
            "type": "string",
            "default": "securePassword123"
          },
          "firstName": {
            "type": "string",
            "default": "john"
          },
          "lastName": {
            "type": "string",
            "default": "Doe"
          },
          "tcAgreed": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "default": 123
          },
          "message": {
            "type": "string",
            "default": "Something went wrong"
          },
          "error": {
            "type": "object"
          }
        }
      }
    }
  },
  "tags": []
}
